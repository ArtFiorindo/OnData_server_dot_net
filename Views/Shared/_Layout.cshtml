<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - OnData</title>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>

<!-- Header com link para a Home -->
<header class="header">
    <div class="container">
        <h1><a href="@Url.Action("Index", "Home")" class="logo">OnData</a></h1>
    </div>
</header>

<!-- Conteúdo principal da página -->
<main class="container">
    @RenderBody()
</main>

<!-- Rodapé com texto padrão para 2024 -->
<footer class="footer">
    <p>© 2024 Todos os direitos reservados - OnData</p>
</footer>

</body>
</html>
